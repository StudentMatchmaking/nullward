<style>
.hero { min-height: calc(100vh - 70px); display: flex; flex-direction: column; justify-content: center; padding: 4rem 2rem; max-width: 900px; margin: 0 auto; }
.hero-tagline { font-size: 0.75rem; letter-spacing: 0.3em; text-transform: uppercase; color: var(--text-muted); margin-bottom: 2rem; }
.hero h1 { font-family: 'Playfair Display', Georgia, serif; font-size: clamp(2.5rem, 6vw, 4rem); font-weight: 400; line-height: 1.2; margin-bottom: 2rem; letter-spacing: -0.02em; }
.hero-description { font-size: 1.1rem; color: var(--text-secondary); max-width: 600px; margin-bottom: 3rem; line-height: 1.8; }
.hero-stat { display: inline-block; padding: 0.75rem 1.5rem; border: 1px solid var(--border); font-size: 0.85rem; color: var(--text-secondary); letter-spacing: 0.05em; }
.about-content { display: grid; grid-template-columns: 1fr; gap: 2rem; }
.about-content p { color: var(--text-secondary); font-size: 1.05rem; line-height: 1.9; }
.about-content p strong { color: var(--text-primary); font-weight: 500; }
.view-all { text-align: center; margin-top: 2rem; }
.view-all-link { display: inline-block; padding: 0.75rem 1.5rem; border: 1px solid var(--border); color: var(--text-secondary); text-decoration: none; font-size: 0.9rem; letter-spacing: 0.05em; transition: all 0.2s ease; }
.view-all-link:hover { border-color: var(--text-primary); color: var(--text-primary); }
@keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
.hero h1, .hero-description, .hero-tagline { animation: fadeInUp 0.8s ease forwards; }
.hero-description { animation-delay: 0.1s; }
.hero-stat { animation: fadeInUp 0.8s ease forwards; animation-delay: 0.2s; opacity: 0; }

/* Unemployment Visualization */
.unemployment-viz { padding: 4rem 2rem; max-width: 900px; margin: 0 auto; }
.viz-header { margin-bottom: 2rem; }
.viz-title { font-family: 'Playfair Display', Georgia, serif; font-size: 1.8rem; font-weight: 400; margin-bottom: 0.5rem; }
.viz-subtitle { color: var(--text-secondary); font-size: 0.95rem; }
.viz-controls { display: flex; flex-wrap: wrap; gap: 1.5rem; margin-bottom: 2rem; }
.control-group { display: flex; flex-direction: column; gap: 0.5rem; }
.control-label { font-size: 0.7rem; letter-spacing: 0.15em; text-transform: uppercase; color: var(--text-muted); }
.control-buttons { display: flex; gap: 0.5rem; }
.control-btn { padding: 0.5rem 1rem; background: transparent; border: 1px solid var(--border); color: var(--text-muted); font-size: 0.8rem; cursor: pointer; transition: all 0.2s ease; font-family: inherit; }
.control-btn:hover { border-color: var(--text-secondary); color: var(--text-secondary); }
.control-btn.active { border-color: var(--text-primary); color: var(--text-primary); background: var(--bg-tertiary); }
.chart-container { position: relative; height: 350px; margin-bottom: 1.5rem; }
.viz-legend { display: flex; flex-wrap: wrap; gap: 1.5rem; justify-content: center; margin-bottom: 1rem; }
.legend-item { display: flex; align-items: center; gap: 0.5rem; font-size: 0.8rem; color: var(--text-secondary); }
.legend-color { width: 24px; height: 3px; }
.legend-color.historical { background: #666; }
.legend-color.minor { background: #4ade80; }
.legend-color.moderate { background: #fbbf24; }
.legend-color.severe { background: #ef4444; }
.viz-note { font-size: 0.75rem; color: var(--text-muted); text-align: center; font-style: italic; }
.viz-stat { display: flex; justify-content: center; gap: 3rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--border); }
.stat-item { text-align: center; }
.stat-value { font-family: 'Playfair Display', Georgia, serif; font-size: 2rem; color: var(--text-primary); }
.stat-value.warning { color: #fbbf24; }
.stat-value.danger { color: #ef4444; }
.stat-label { font-size: 0.7rem; letter-spacing: 0.1em; text-transform: uppercase; color: var(--text-muted); margin-top: 0.25rem; }
@media (max-width: 768px) {
    .viz-controls { flex-direction: column; }
    .viz-stat { flex-direction: column; gap: 1.5rem; }
    .chart-container { height: 280px; }
}

/* Job Risk Assessment */
.job-risk { padding: 4rem 2rem; max-width: 900px; margin: 0 auto; border-top: 1px solid var(--border); }
.job-risk .viz-header { margin-bottom: 2rem; }
.job-search-container { position: relative; margin-bottom: 2rem; }
.job-search { width: 100%; padding: 1rem 1.25rem; background: var(--bg-secondary); border: 1px solid var(--border); color: var(--text-primary); font-size: 1rem; font-family: inherit; transition: border-color 0.2s ease; }
.job-search:focus { outline: none; border-color: var(--text-muted); }
.job-search::placeholder { color: var(--text-muted); }
.search-suggestions { position: absolute; top: 100%; left: 0; right: 0; background: var(--bg-secondary); border: 1px solid var(--border); border-top: none; max-height: 250px; overflow-y: auto; z-index: 50; display: none; }
.search-suggestions.active { display: block; }
.suggestion-item { padding: 0.75rem 1.25rem; cursor: pointer; transition: background 0.2s ease; display: flex; justify-content: space-between; align-items: center; }
.suggestion-item:hover { background: var(--bg-tertiary); }
.suggestion-job { color: var(--text-primary); }
.suggestion-risk { font-size: 0.75rem; padding: 0.2rem 0.5rem; border-radius: 2px; }
.suggestion-risk.low { background: rgba(74, 222, 128, 0.2); color: #4ade80; }
.suggestion-risk.moderate { background: rgba(251, 191, 36, 0.2); color: #fbbf24; }
.suggestion-risk.high { background: rgba(239, 68, 68, 0.2); color: #ef4444; }

.risk-result { display: none; animation: fadeInUp 0.5s ease forwards; }
.risk-result.active { display: block; }
.result-job-title { font-family: 'Playfair Display', Georgia, serif; font-size: 1.5rem; margin-bottom: 0.5rem; }
.result-category { font-size: 0.8rem; color: var(--text-muted); margin-bottom: 2rem; text-transform: uppercase; letter-spacing: 0.1em; }

.risk-meter { margin-bottom: 2rem; }
.meter-labels { display: flex; justify-content: space-between; margin-bottom: 0.5rem; }
.meter-label { font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); }
.meter-bar { height: 8px; background: var(--bg-tertiary); position: relative; overflow: hidden; }
.meter-fill { height: 100%; width: 0%; transition: width 1s ease-out, background 0.3s ease; }
.meter-fill.low { background: linear-gradient(90deg, #4ade80, #22c55e); }
.meter-fill.moderate { background: linear-gradient(90deg, #fbbf24, #f59e0b); }
.meter-fill.high { background: linear-gradient(90deg, #ef4444, #dc2626); }
.meter-marker { position: absolute; top: -8px; transform: translateX(-50%); transition: left 1s ease-out; }
.meter-marker::after { content: ''; display: block; width: 0; height: 0; border-left: 6px solid transparent; border-right: 6px solid transparent; border-top: 8px solid var(--text-primary); }

.risk-score-display { text-align: center; margin-bottom: 2rem; }
.risk-percentage { font-family: 'Playfair Display', Georgia, serif; font-size: 4rem; line-height: 1; }
.risk-percentage.low { color: #4ade80; }
.risk-percentage.moderate { color: #fbbf24; }
.risk-percentage.high { color: #ef4444; }
.risk-label { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-top: 0.5rem; }

.risk-details { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem; }
.risk-detail { padding: 1.25rem; background: var(--bg-secondary); border: 1px solid var(--border); }
.detail-label { font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); margin-bottom: 0.5rem; }
.detail-value { color: var(--text-primary); font-size: 0.95rem; line-height: 1.6; }

.risk-factors { margin-bottom: 2rem; }
.risk-factors h4 { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); margin-bottom: 1rem; }
.factor-list { display: flex; flex-direction: column; gap: 0.75rem; }
.factor-item { display: flex; align-items: center; gap: 0.75rem; font-size: 0.9rem; color: var(--text-secondary); }
.factor-icon { width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 0.75rem; }
.factor-icon.negative { color: #ef4444; }
.factor-icon.positive { color: #4ade80; }

@media (max-width: 768px) {
    .risk-details { grid-template-columns: 1fr; }
    .risk-percentage { font-size: 3rem; }
}

/* Most At Risk Section */
.most-at-risk { margin-top: 2rem; }
.most-at-risk.hidden { display: none; }
.most-at-risk-title { font-size: 0.7rem; letter-spacing: 0.15em; text-transform: uppercase; color: var(--text-muted); margin-bottom: 1rem; }
.at-risk-jobs { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; }
.at-risk-card { padding: 1.25rem; background: var(--bg-secondary); border: 1px solid var(--border); cursor: pointer; transition: all 0.2s ease; }
.at-risk-card:hover { border-color: var(--text-muted); transform: translateY(-2px); }
.at-risk-job-title { font-size: 0.95rem; color: var(--text-primary); margin-bottom: 0.5rem; }
.at-risk-category { font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.75rem; }
.at-risk-percent { font-family: 'Playfair Display', Georgia, serif; font-size: 1.8rem; color: #ef4444; }
.at-risk-label { font-size: 0.65rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; }
@media (max-width: 768px) {
    .at-risk-jobs { grid-template-columns: 1fr; }
}

/* AI News Ticker */
.news-ticker {
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border);
    padding: 0.6rem 0;
    overflow: hidden;
    position: relative;
    margin-top: 70px;
}
.ticker-label {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    background: linear-gradient(90deg, var(--bg-secondary) 80%, transparent);
    padding: 0.6rem 1rem;
    font-size: 0.65rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #4ade80;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.ticker-pulse {
    width: 6px;
    height: 6px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
}
@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
}
.ticker-track {
    display: flex;
    animation: scroll 60s linear infinite;
    padding-left: 120px;
}
.ticker-track:hover {
    animation-play-state: paused;
}
@keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}
.ticker-item {
    flex-shrink: 0;
    padding: 0 2rem;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}
.ticker-item a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.8rem;
    transition: color 0.2s ease;
}
.ticker-item a:hover {
    color: var(--text-primary);
}
.ticker-source {
    font-size: 0.65rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}
.ticker-divider {
    color: var(--border);
    font-size: 0.7rem;
}
.ticker-loading {
    color: var(--text-muted);
    font-size: 0.8rem;
    padding-left: 120px;
}

/* AI Threat Level Dashboard */
.threat-dashboard {
    padding: 3rem 2rem;
    max-width: 900px;
    margin: 0 auto;
    border-bottom: 1px solid var(--border);
}
.threat-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
}
.threat-title {
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
}
.threat-status {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 400;
}
.threat-updated {
    font-size: 0.7rem;
    color: var(--text-muted);
}
.threat-meter {
    position: relative;
    margin-bottom: 1.5rem;
}
.threat-levels {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 4px;
    margin-bottom: 0.75rem;
}
.threat-level {
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.3;
    transition: all 0.3s ease;
    position: relative;
}
.threat-level.active {
    opacity: 1;
}
.threat-level.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 6px solid var(--text-primary);
}
.level-1 { background: #22c55e; color: #000; }
.level-2 { background: #84cc16; color: #000; }
.level-3 { background: #fbbf24; color: #000; }
.level-4 { background: #f97316; color: #000; }
.level-5 { background: #ef4444; color: #fff; }
.threat-labels {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 4px;
    font-size: 0.6rem;
    color: var(--text-muted);
    text-align: center;
}
.threat-description {
    margin-top: 1.5rem;
    padding: 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
}
.threat-description p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.7;
    margin: 0;
}
.threat-indicators {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 1.5rem;
}
.indicator {
    text-align: center;
    padding: 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
}
.indicator-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
}
.indicator-value.up { color: #ef4444; }
.indicator-value.down { color: #22c55e; }
.indicator-value.neutral { color: #fbbf24; }
.indicator-label {
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
}
@media (max-width: 768px) {
    .threat-indicators { grid-template-columns: 1fr; }
    .threat-levels { height: 35px; }
    .threat-level { font-size: 0.55rem; }
}
</style>

