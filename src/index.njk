    // Improved search with relevance scoring
    function searchJobs(query) {
        const q = query.toLowerCase().trim();
        if (q.length < 2) return [];

        return jobs.map(job => {
            const title = job.title.toLowerCase();
            const category = job.category.toLowerCase();
            let score = 0;

            // Exact match gets highest score
            if (title === q) score = 100;
            // Title starts with query
            else if (title.startsWith(q)) score = 80;
            // Word in title starts with query
            else if (title.split(/[\s\/\-\(\)]+/).some(word => word.startsWith(q))) score = 60;
            // Title contains query
            else if (title.includes(q)) score = 40;
            // Category matches
            else if (category.startsWith(q)) score = 30;
            else if (category.includes(q)) score = 20;

            return { job, score };
        })
        .filter(item => item.score > 0)
        .sort((a, b) => b.score - a.score || a.job.title.localeCompare(b.job.title))
        .slice(0, 10)
        .map(item => item.job);
    }

    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        const matches = searchJobs(query);

        if (matches.length === 0) {
            suggestionsDiv.classList.remove('active');
            return;
        }

        suggestionsDiv.innerHTML = matches.map(job => {
            const riskClass = job.risk >= 70 ? 'high' : job.risk >= 35 ? 'moderate' : 'low';
            return `<div class="suggestion-item" data-job="${job.title}">
                <span class="suggestion-job">${job.title}</span>
                <span class="suggestion-risk ${riskClass}">${job.risk}% risk</span>
            </div>`;
        }).join('');

        suggestionsDiv.classList.add('active');

        suggestionsDiv.querySelectorAll('.suggestion-item').forEach(item => {
            item.addEventListener('click', function() {
                const jobTitle = this.dataset.job;
                selectJob(jobTitle);
            });
        });
    });

